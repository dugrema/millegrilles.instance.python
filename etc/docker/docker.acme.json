{
  "name": "acme",
  "image": "docker.maceroc.com/mg_acme:3095_3",
  "args": ["daemon"],
  "mounts": [
    {"source": "acmesh-data", "target":  "/acme.sh", "type": "volume"},
    {"source": "/var/opt/millegrilles/nginx/html", "target":  "/usr/share/nginx/html", "type": "bind"}
  ],
  "constraints": [
    "node.labels.millegrilles.nginx == true"
  ],
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 10000000
  },
  "restart_policy": {
    "condition": "on-failure",
    "delay": 5000000000,
    "max_attempts": 1
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
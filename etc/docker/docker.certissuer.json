{
  "name": "certissuer",
  "image": "docker.maceroc.com/millegrilles_midcompte_python:2022.3.0",
  "args": ["-m", "millegrilles_certissuer", "--verbose"],
  "env": [
    "INSTANCE_ID=${INSTANCE_ID}"
  ],
  "constraints": [
    "node.labels.millegrilles.certissuer == true"
  ],
  "mounts": [
    "/var/opt/millegrilles/issuer:/var/opt/millegrilles/issuer:rw"
  ],
  "networks": [{
    "target": "millegrille_net"
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 50000000
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
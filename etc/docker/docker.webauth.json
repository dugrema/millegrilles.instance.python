{
  "name": "webauth",
  "image": "docker.maple.maceroc.com:5000/millegrilles_webauth_python:2024.1.6",
  "certificat": {
    "roles": ["webauth"],
    "exchanges": ["1.public"],
    "dns": {"localhost": true, "hostnames": ["webauth"], "domain": true}
  },
  "env": {
    "MQ_HOSTNAME": "${MQ_HOSTNAME}",
    "MQ_PORT": "${MQ_PORT}",
    "REDIS_HOSTNAME": "redis",
    "REDIS_PORT": "6379",
    "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt",
    "CERT_PEM": "/run/secrets/cert.pem",
    "KEY_PEM": "/run/secrets/key.pem",
    "CA_PEM": "/run/secrets/millegrille.cert.pem",
    "WEB_PORT": "1443"
  },
  "constraints": [
    "node.labels.millegrilles.webauth == true"
  ],
  "configs": [
    {
      "name": "pki.webauth",
      "current": "cert",
      "filename": "/run/secrets/cert.pem"
    },
    {
      "name": "pki.millegrille",
      "filename": "/run/secrets/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.webauth",
      "current": "key",
      "filename": "key.pem"
    },
    {
      "name": "passwd.redis",
      "current": "password",
      "filename": "passwd.redis.txt"
    }
  ],
  "networks": [
    {"target": "millegrille_net", "aliases": ["webauth"]},
    {"target": "bridge"}
  ],
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 100000000
  },
  "restart_policy": {
    "condition": "on-failure",
    "delay": 5000000000,
    "max_attempts": 100
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
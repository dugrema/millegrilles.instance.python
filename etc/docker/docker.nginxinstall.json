{
  "name": "nginxinstall",
  "image": "docker.maple.maceroc.com:5000/millegrilles_nginx:1.27-alpine.2024.7.12",
  "env": {
    "ONIONSERVICE_NAME": "nginx",
    "ONIONSERVICE_PORT": "443"
  },
  "mounts": [
    {"source": "{NGINX_PATH}/modules", "target": "/etc/nginx/conf.d/modules", "type": "bind", "read_only": true},
    {"source": "{NGINX_PATH}/html", "target": "/usr/share/nginx/html", "type": "bind", "read_only": true}
  ],
  "constraints": [
    "node.labels.millegrilles.nginx == true"
  ],
  "configs": [
    {
      "name": "pki.web",
      "current": "cert",
      "filename": "/run/secrets/webcert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.web",
      "current": "key",
      "filename": "webkey.pem"
    }
  ],
  "labels": {
    "install_priority": "1"
  },
  "endpoint_spec": {
    "mode": "vip",
    "ports": [
      {
        "published_port": 443,
        "target_port": 443,
        "protocol": "tcp",
        "publish_mode": "host"
      },
      {
        "published_port": 80,
        "target_port": 80,
        "protocol": "tcp",
        "publish_mode": "host"
      }
    ]
  },
  "resources": {
    "cpu_limit": 2000000000,
    "mem_limit": 30000000
  },
  "restart_policy": {
    "condition": "on-failure",
    "delay": 5000000000,
    "max_attempts": 1000
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}

{
  "nom": "backup",
  "version": "2023.11.5",
  "securite": "2.prive",
  "dependances": [
    {
      "name": "backup",
      "image": "docker.maple.maceroc.com:5000/millegrilles_midcompte_python:2023.11.12",
      "args": ["-m", "millegrilles_backup"],
      "certificat": {
        "roles": ["backup"],
        "exchanges": ["2.prive", "1.public"]
      },
      "env": {
        "CA_PEM": "/run/secrets/millegrille.cert.pem",
        "CERT_PEM": "/run/secrets/cert.pem",
        "KEY_PEM": "/run/secrets/key.pem",
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "DIR_BACKUP": "/var/opt/millegrilles/consignation/backup",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt"
      },
      "constraints": ["node.labels.millegrilles.media == true"],
      "mounts": [
        {"source": "millegrilles-backup", "target":  "/var/opt/millegrilles/consignation/backup", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.backup",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.backup",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net"},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 400000000,
        "mem_limit": 75000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}

{
  "nom": "collections",
  "version": "2023.0.5",
  "securite": "2.prive",
  "dependances": [
    {
      "name": "collections",
      "image": "docker.maceroc.com/millegrilles_collections:2023.0.3",
      "certificat": {
        "roles": ["collections"],
        "exchanges": ["2.prive", "1.public"],
        "dns": {"localhost": true, "hostnames": ["collections"], "domain": true}
      },
      "env": {
        "MG_MQ_URL": "amqps://${MQ_HOSTNAME}:${MQ_PORT}",
        "MG_MQ_CERTFILE": "/run/secrets/cert.pem",
        "MG_MQ_KEYFILE": "/run/secrets/key.pem",
        "MG_MQ_CAFILE": "/run/secrets/millegrille.cert.pem",
        "WEB_CERT": "/run/secrets/cert.pem",
        "WEB_KEY": "/run/secrets/key.pem",
        "SERVER_TYPE": "spdy",
        "HOST": "${HOSTNAME}",
        "PORT": "443",
        "MG_REDIS_HOST": "redis",
        "MG_REDIS_PORT": "6379",
        "MG_MQ_REDIS_PASSWD": "/run/secrets/passwd.redis.txt",
        "MG_CONSIGNATION_URL": "https://${HOSTNAME}:444/fichiers_transfert",
        "PATH_STAGING": "/var/opt/millegrilles/consignation/staging/collections"
      },
      "constraints": ["node.labels.millegrilles.collections == true"],
      "mounts": [
        {"source": "millegrilles-staging", "target": "/var/opt/millegrilles/consignation/staging", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.collections",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.collections",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net", "aliases": ["collections"]},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 250000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 2
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      },
      "labels": {
        "certificat": true,
        "url": "https://${HOSTNAME}/collections",
        "securite": "2.prive"
      }
    }
  ],
  "nginx": {
    "conf": ["collections.app.location", "collections.app.proxypass"]
  }
}
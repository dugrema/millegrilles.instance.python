{
  "nom": "senseurspassifs_web",
  "version": "2023.0.3",
  "description": {
    "en": "Senseurs Passifs (web)",
    "fr": "Senseurs Passifs (web)"
  },
  "securite": "2.prive",
  "dependances": [
    {
      "name": "senseurspassifs_web",
      "image": "docker.maceroc.com/millegrilles_web_senseurspassifs:2023.0.2",
      "certificat": {
        "roles": ["senseurspassifs_web"],
        "dns": {"localhost": true, "hostnames": ["senseurspassifs_web"], "domain": true},
        "exchanges": ["2.prive", "1.public"]
      },
      "env": {
        "MG_MQ_URL": "amqps://${MQ_HOSTNAME}:${MQ_PORT}",
        "MG_MQ_CERTFILE": "/run/secrets/cert.pem",
        "MG_MQ_KEYFILE": "/run/secrets/key.pem",
        "MG_MQ_CAFILE": "/run/secrets/millegrille.cert.pem",
        "WEB_CERT": "/run/secrets/cert.pem",
        "WEB_KEY": "/run/secrets/key.pem",
        "SERVER_TYPE": "spdy",
        "PORT": "443",
        "MG_REDIS_HOST": "redis",
        "MG_REDIS_PORT": "6379",
        "MG_MQ_REDIS_PASSWD": "/run/secrets/passwd.redis.txt"
      },
      "configs": [
        {
          "name": "pki.senseurspassifs_web",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.senseurspassifs_web",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net",
          "aliases": [
            "senseurspassifs_web"
          ]
        },
        {"target": "bridge"}
      ],
      "labels": {
        "url": "https://${HOSTNAME}/senseurspassifs",
        "securite": "2.prive"
      },
      "resources": {
        "cpu_limit": 500000000,
        "mem_limit": 250000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ],
  "nginx": {
    "conf": ["senseurspassifs_web.app.location"]
  }
}
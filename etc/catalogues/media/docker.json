{
  "nom": "media",
  "version": "2022.4.0",
  "securite": "4.secure",
  "dependances": [
    {
      "name": "media",
      "image": "docker.maceroc.com/millegrilles_media:2022.4.0",
      "certificat": {
        "roles": ["media", "fichiers"],
        "domaines": ["GrosFichiers"],
        "exchanges": ["4.secure", "3.protege", "2.prive", "1.public"]
      },
      "env": {
        "MG_MQ_URL": "amqps://mq:5673",
        "MG_REDIS_HOST": "redis",
        "MG_REDIS_PORT": "6379",
        "MG_MQ_REDIS_PASSWD": "/run/secrets/passwd.redis.txt",
        "MG_MQ_CERTFILE": "/run/secrets/cert.pem",
        "MG_MQ_KEYFILE": "/run/secrets/key.pem",
        "MG_MQ_CAFILE": "/run/secrets/millegrille.cert.pem",
        "WEB_CERT": "/run/secrets/cert.pem",
        "WEB_KEY": "/run/secrets/key.pem",
        "SERVER_TYPE": "https",
        "PATH_STAGING": "/var/opt/millegrilles/consignation/staging/media"
      },
      "constraints": ["node.labels.millegrilles.media == true"],
      "mounts": [
        {"source": "millegrilles-staging", "target":  "/var/opt/millegrilles/consignation/staging", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.media",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.media",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [{"target": "millegrille_net", "aliases": ["media"]}],
      "resources": {
        "cpu_limit": 3000000000,
        "mem_limit": 314572800
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 2
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}

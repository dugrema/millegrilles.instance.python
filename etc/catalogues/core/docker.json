{
  "nom": "core",
  "version": "2023.11.9",
  "securite": "4.secure",
  "dependances": [
    {
      "name": "core",
      "image": "docker.maple.maceroc.com:5000/millegrilles_core:2023.11.9",
      "certificat": {
        "roles": ["core"],
        "exchanges": ["4.secure", "3.protege", "2.prive", "1.public" ],
        "domaines": [
          "CoreBackup",
          "CoreCatalogues",
          "CoreMaitreDesComptes",
          "CorePki",
          "CoreTopologie"
        ],
        "dns": { "hostnames": [ "core" ] }
      },
      "env": {
        "MG_MQ_HOST": "${MQ_HOSTNAME}",
        "MG_MQ_PORT": "${MQ_PORT}",
        "MG_MONGO_HOST": "mongo",
        "MG_MQ_SSL": "on",
        "MG_MQ_AUTH_CERT": "on",
        "CERTFILE": "/run/secrets/cert.pem",
        "KEYFILE": "/run/secrets/key.pem",
        "CAFILE": "/run/secrets/millegrille.cert.pem",
        "MG_REDIS_URL": "rediss://client_rust@redis:6379#insecure",
        "MG_REDIS_PASSWORD_FILE": "/run/secrets/passwd.redis.txt",
        "RUST_LOG": "warn",
        "MG_CERTISSUER_URL": "http://certissuer:2080"
      },
      "constraints": [
        "node.labels.millegrilles.core == true",
        "node.labels.millegrilles.database == true"
      ],
      "configs": [
        {
          "name": "pki.core",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.core",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net"
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 200000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}

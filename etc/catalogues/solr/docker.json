{
  "nom": "solr",
  "version": "2023.6.1",
  "securite": "4.secure",
  "dependances": [
    {
      "name": "solr-zookeeper",
      "image": "zookeeper:3.8",
      "hostname": "solrzookeeper",
      "mounts": [
        {
          "source": "solr-zookeeper-data",
          "target": "/data",
          "type": "volume"
        },{
          "source": "solr-zookeeper-datalog",
          "target": "/datalog",
          "type": "volume"
        }
      ],
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "networks": [
        {
          "target": "millegrille_net",
          "aliases": ["solrzookeeper"]
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 500000000,
        "mem_limit": 300000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    },
    {
      "name": "solr",
      "image": "docker.maple.maceroc.com:5000/mg_solr:9.2_0",
      "hostname": "solr",
      "mounts": [
        {
          "source": "solr-data",
          "target": "/var/solr",
          "type": "volume"
        }
      ],
      "certificat": {
        "roles": ["solr"],
        "dns": {
          "localhost": true,
          "hostnames": ["solr"],
          "domain": true
        }
      },
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/pki.millegrille.cert"
        },
        {
          "name": "pki.solr",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.solr",
          "current": "key",
          "filename": "key.pem"
        }
      ],
      "networks": [
        { "target": "millegrille_net", "aliases": ["solr"] }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 2000000000,
        "mem_limit": 2500000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}

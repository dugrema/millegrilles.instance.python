{
  "nom": "solr",
  "version": "2023.11.1",
  "securite": "3.protege",
  "dependances": [
    {
      "name": "solr_zookeeper",
      "image": "zookeeper:3.8",
      "hostname": "solrzookeeper",
      "certificat": {
        "nom": "solr_zookeeper",
        "roles": ["solrzookeeper"],
        "dns": {
          "localhost": true,
          "hostnames": ["solrzookeeper"],
          "domain": true
        }
      },
      "mounts": [
        {
          "source": "solr-zookeeper-data",
          "target": "/data",
          "type": "volume"
        },{
          "source": "solr-zookeeper-datalog",
          "target": "/datalog",
          "type": "volume"
        }
      ],
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/pki.millegrille.cert"
        },
        {
          "name": "pki.solr_zookeeper",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.solr_zookeeper",
          "current": "key",
          "filename": "key.pem"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net",
          "aliases": ["solrzookeeper"]
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 500000000,
        "mem_limit": 300000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    },
    {
      "name": "solr_server",
      "image": "docker.maple.maceroc.com:5000/mg_solr:9.2_0",
      "hostname": "solr",
      "mounts": [
        {
          "source": "solr-data",
          "target": "/var/solr",
          "type": "volume"
        }
      ],
      "certificat": {
        "nom": "solr_server",
        "roles": ["solr"],
        "dns": {
          "localhost": true,
          "hostnames": ["solr"],
          "domain": true
        }
      },
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/pki.millegrille.cert"
        },
        {
          "name": "pki.solr_server",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.solr_server",
          "current": "key",
          "filename": "key.pem"
        }
      ],
      "networks": [
        { "target": "millegrille_net", "aliases": ["solr"] }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 2000000000,
        "mem_limit": 2500000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    },
    {
      "name": "solr_relai",
      "image": "docker.maple.maceroc.com:5000/millegrilles_midcompte_python:2023.11.16",
      "args": ["-m", "millegrilles_solr", "--verbose"],
      "hostname": "solrrelai",
      "certificat": {
        "nom": "solr_relai",
        "roles": ["solrrelai"],
        "exchanges": ["4.secure","3.protege","2.prive","1.public"]
      },
      "env": {
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "MG_REDIS_HOST": "redis",
        "MG_REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt"
      },
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/pki.millegrille.cert"
        },
        {
          "name": "pki.solr_relai",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.solr_relai",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net"
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 100000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}

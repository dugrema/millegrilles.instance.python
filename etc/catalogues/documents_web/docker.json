{
  "nom": "documents_web",
  "version": "2023.5.0",
  "securite": "2.prive",
  "dependances": [
    {
      "name": "documents_web",
      "image": "docker.maceroc.com/millegrilles_documents_web:2023.5.0",
      "certificat": {
        "roles": ["documents_web"],
        "exchanges": ["2.prive", "1.public"],
        "dns": {"localhost": true, "hostnames": ["documents"], "domain": true}
      },
      "env": {
        "MG_MQ_URL": "amqps://${MQ_HOSTNAME}:${MQ_PORT}",
        "MG_MQ_CERTFILE": "/run/secrets/cert.pem",
        "MG_MQ_KEYFILE": "/run/secrets/key.pem",
        "MG_MQ_CAFILE": "/run/secrets/millegrille.cert.pem",
        "WEB_CERT": "/run/secrets/cert.pem",
        "WEB_KEY": "/run/secrets/key.pem",
        "SERVER_TYPE": "spdy",
        "HOST": "${HOSTNAME}",
        "PORT": "443",
        "MG_REDIS_HOST": "redis",
        "MG_REDIS_PORT": "6379",
        "MG_MQ_REDIS_PASSWD": "/run/secrets/passwd.redis.txt"
      },
      "constraints": ["node.labels.millegrilles.documents == true"],
      "configs": [
        {
          "name": "pki.documents_web",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.documents_web",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net", "aliases": ["documents"]},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 250000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 2
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      },
      "labels": {
        "certificat": true,
        "url": "https://${HOSTNAME}/documents",
        "securite": "2.prive"
      }
    }
  ],
  "nginx": {
    "conf": ["documents.app.location", "documents.app.proxypass"]
  }
}
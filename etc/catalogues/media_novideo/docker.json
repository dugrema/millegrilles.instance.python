{
  "nom": "media_novideo",
  "version": "2023.11.0",
  "securite": "3.protege",
  "dependances": [
    {
      "name": "media_novideo",
      "image": "docker.maple.maceroc.com:5000/millegrilles_media_python:2023.10.2",
      "args": ["-m", "millegrilles_media", "--verbose", "--novideo"],
      "certificat": {
        "roles": ["media"],
        "exchanges": ["4.secure", "3.protege", "2.prive", "1.public"]
      },
      "env": {
        "CA_PEM": "/run/secrets/millegrille.cert.pem",
        "CERT_PEM": "/run/secrets/cert.pem",
        "KEY_PEM": "/run/secrets/key.pem",
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "DIR_STAGING": "/var/opt/millegrilles/staging/media",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "media"
      },
      "constraints": ["node.labels.millegrilles.media == true"],
      "mounts": [
        {"source": "millegrilles-staging", "target":  "/var/opt/millegrilles/staging", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.media_novideo",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.media_novideo",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net"},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 500000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 5
      },
      "mode": {
        "mode": "replicated",
        "replicas": 2
      }
    }
  ]
}

{
  "nom": "relaiweb",
  "version": "2023.9.2",
  "description": {
    "en": "Web relay for commands",
    "fr": "Relai web pour commandes"
  },
  "securite": "1.public",
  "dependances": [
    {
      "name": "relaiweb",
      "image": "docker.maple.maceroc.com:5000/millegrilles_midcompte_python:2023.9.2",
      "args": ["-m", "millegrilles_relaiweb", "--verbose"],
      "constraints": ["node.labels.millegrilles.relaiweb == true"],
      "certificat": {
        "roles": ["relaiweb"],
        "exchanges": ["1.public"]
      },
      "env": {
        "CA_PEM": "/run/secrets/pki.millegrille",
        "CERT_PEM": "/run/secrets/pki.relaiweb.cert",
        "KEY_PEM": "/run/secrets/pki.relaiweb.key",
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}"
      },
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/pki.millegrille"
        },
        {
          "name": "pki.relaiweb",
          "current": "cert",
          "filename": "/run/secrets/pki.relaiweb.cert"
        }
      ],
      "secrets": [
        {
          "name": "pki.relaiweb",
          "current": "key",
          "filename": "pki.relaiweb.key"
        }
      ],
      "networks": [
        {"target": "millegrille_net"},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 500000000,
        "mem_limit": 250000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 5000000000,
        "max_attempts": 1
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}
